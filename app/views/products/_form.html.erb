<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: :"form-control" %>
  <%= f.label :price %>
  <%= f.text_field :price, class: :"form-control", type: :number %>
  <%= f.label :country %>
  <%= f.text_field :country, class: :"form-control" %>
  <%= f.submit  %>
<% end %>
